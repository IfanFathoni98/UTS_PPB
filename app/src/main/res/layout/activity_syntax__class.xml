<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Syntax_Class">

    <TextView
        android:id="@+id/Syntax_Class"
        android:layout_width="169dp"
        android:layout_height="164dp"
        android:textAlignment="viewStart"
        android:textColor="#F5EFF0"
        app:layout_constraintBottom_toTopOf="@+id/Kembali_Syntax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128"
        tools:text="@string/Text_SyntaxClass" />

    <Button
        android:id="@+id/Kembali_Syntax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#2196F3"
        android:text="@string/Tombol_kembalisyntaxclass"
        android:textColor="#FCF8F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>